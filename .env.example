# ===========================================
# DISCORD BOT CONFIGURATION
# ===========================================

# Discord Bot Token (from Discord Developer Portal > Bot > Token)
DISCORD_TOKEN=your_discord_bot_token_here

# Discord Application ID (from Discord Developer Portal > General Information > Application ID)
DISCORD_CLIENT_ID=your_discord_client_id_here

# Discord Server ID (Right-click server > Copy Server ID)
GUILD_ID=your_discord_server_id_here

# Discord Channel ID for bot messages (Right-click channel > Copy Channel ID)
TRACKED_CHANNEL_ID=your_channel_id_here

# ===========================================
# RIOT GAMES API
# ===========================================

# Riot API Key (from https://developer.riotgames.com/)
# NOTE: Development keys expire every 24 hours!
RIOT_API_KEY=RGAPI-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Riot Region (default: vn2 for Vietnam)
RIOT_REGION=vn2

# ===========================================
# AI SERVICE (Cerebras)
# ===========================================

# Cerebras API Key (from https://cloud.cerebras.ai/)
# Get your FREE API key at: https://cloud.cerebras.ai/
CEREBRAS_API_KEY=your_cerebras_api_key_here

# Cerebras Model (default: llama-3.3-70b)
# Available models: llama-3.3-70b, llama-3.1-8b, llama-3.1-70b
CEREBRAS_MODEL=llama-3.3-70b

# ===========================================
# DATABASE
# ===========================================

# MongoDB Connection String
# For MongoDB Atlas (recommended):
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/discord_lol_bot?retryWrites=true&w=majority

# For local MongoDB:
# MONGODB_URI=mongodb://localhost:27017/discord_lol_bot

# ===========================================
# OPTIONAL SETTINGS
# ===========================================

# Environment (development or production)
NODE_ENV=development

# Log level (error, warn, info, debug)
LOG_LEVEL=info
